<div class="well">
  <div class="content-div">
    {{post.title}}
    {{post.content}}
  </div>
  <button class="words" {{action 'delete' post}}>Delete Post</button>
  <br>
</div>
<h2>Answers:</h2>
<ul>
  {{#each post.answers as |answer|}}
  {{answer-tile answer=answer destroyAnswer='destroyAnswer'}}
  {{/each}}
</ul>
